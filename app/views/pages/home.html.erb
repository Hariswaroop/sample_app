
<% if signed_in? %>
<div class="container">
	<table summary="for signed-in users">
		<tr>
			<td class="main">
				<h3>What's up?</h3>
				<%=render 'shared/micropost_form'%>
				<%=render 'shared/feed'%>
			</td> 
			<td class="sidebar">
				<%= render 'shared/user_info' %>
				<%=render 'shared/stats' %>
			</td>
		</tr>
	</table>
</div>
<% else %>
<div class="center hero-unit">
<h1>Welcome to "Have Fun" </h1>
<h2>
This is a social networking site... Sign up and start following friends and have feeds from them.</h2>
<%=link_to "Sign Up Now!",signup_path, class: "btn btn-large btn-primary"%>
</div>
<% end %>
